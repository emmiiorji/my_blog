<main>

  <% if !@user %>
    <p> <%= "User does not exist." %> </p>
  <% elsif @post == -1 %>
    <p> <%= "Requested post by the user is not available. It's likely they create it." %> </p>
  <% else %>
    <div>
      <section>
        <header>
          <h2> <%= "#{@post.title} by #{@user.name}" %> </h2>
          <p> <%= "Comments: #{@post.comments_counter}, Likes: #{@post.likes_counter}" %> </p>
        </header>
        <p> <%= @post.text %> </p>
      </section>

      <%= render partial: 'post_comments_card', locals: {comments: @comments, users: @users} %>
    </div>
  <% end %>
</main>