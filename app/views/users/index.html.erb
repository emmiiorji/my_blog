<main>
  <h1>List of all users</h1>
  <% @users.each do |user| %>
      <a class="user-link">
        <div>
          <img src="/users/<%= user[:id] %>"/>
          <div>
            <p><%= user[:name] %></p>
            <p>Number of posts: <%= user[:posts_counter] %></p>
          </div>
        </div>
      </a>
    <% end %>
</main>